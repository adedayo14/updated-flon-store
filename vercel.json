{
  "_comment": "Force deployment trigger",
  "functions": {
    "pages/api/**/*.{js,ts}": {
      "maxDuration": 30
    },
    "pages/**/*.{js,ts,tsx}": {
      "maxDuration": 60
    }
  },
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/next",
      "config": {
        "maxLambdaSize": "50mb",
        "includeFiles": [
          "config/**",
          "public/**"
        ]
      }
    }
  ]
}
